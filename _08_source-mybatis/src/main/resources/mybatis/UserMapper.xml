<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.why.start.mybatis.mapper.UserMapper">

    <sql id="key">
        id,`name`,pwd
    </sql>

    <select id="queryById" resultType="user">
        select
        <include refid="key"/>
        from user
        where id = #{id}
    </select>
</mapper>